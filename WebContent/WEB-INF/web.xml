<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>BoAi</display-name>
  <welcome-file-list>
    <welcome-file>control/index.jsp</welcome-file>
  </welcome-file-list>
  
  <filter>
  <filter-name>FilterCharset</filter-name>
  <filter-class>cn.boai.web.util.FilterCharset</filter-class>
    <init-param>
          <param-name>encoding</param-name>
          <param-value>utf-8</param-value>
      </init-param>
</filter>

 <filter>
  <filter-name>ArticleIndexFilter</filter-name>
  <filter-class>cn.boai.web.util.ArticleIndexFilter</filter-class>
    
</filter>


<filter-mapping>
  <filter-name>FilterCharset</filter-name>
  <url-pattern>/*</url-pattern>
</filter-mapping>  

<filter-mapping>
  <filter-name>ArticleIndexFilter</filter-name>
  <url-pattern>/information.jsp</url-pattern>
</filter-mapping> 
  
  
  
   <servlet>
  	<servlet-name>user</servlet-name>
  	<servlet-class>cn.boai.web.core.CoreServlet</servlet-class>
  	<init-param>
  		<param-name>configLocation</param-name>
  		<param-value>/WEB-INF/config.properties</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>user</servlet-name>
  	<url-pattern>*.do</url-pattern>
  </servlet-mapping>
</web-app>